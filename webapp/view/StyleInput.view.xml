<mvc:View controllerName="esprit.poc.PrintScanPOC.controller.StyleInput" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages><Page title="{i18n>title}">
				<content>
					<Panel id="mainPanel" backgroundDesign="Transparent" expanded="true">
					    <VBox width="100%" direction="Column" id="vbox0">
					        <items>
					            <Label text="{i18n>style}" width="100%" id="label0"/>
					        </items>
					    </VBox>
					    <VBox width="100%" direction="Column" id="vbox1">
					        <items>
					            <Input width="100%" id="styleInput"/>
					        </items>
					    </VBox>
				    </Panel>
				</content>
			<footer>
			    <Toolbar width="100%" id="toolbar1">
			        <content>
			            <Button text="{i18n>scan}" width="60px" id="btnScan" type="Accept" press="navTo('ScanSingle')"/>
			            <Button text="{i18n>multiScan}" width="115px" id="btnMultiScan" type="Accept" press="navTo('ScanMulti')" />
			            <Button text="{i18n>go}" width="50px" id="btnGo" type="Emphasized" press="onGoPressed"/>
			            <Button text="{i18n>cancel}" width="80px" id="btnCancel" press="navTo('EANList')"/>
			        </content>
			    </Toolbar>
			</footer>
			</Page>
		</pages>
	</App>
</mvc:View>